{
  "$schema": "https://railpack.io/schema.json",
  "name": "parklookup",
  "builder": "nodejs",
  "node": {
    "version": "20"
  },
  "build": {
    "command": "pnpm install --frozen-lockfile && pnpm build"
  },
  "start": {
    "command": "pnpm start"
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "8080"
  },
  "healthcheck": {
    "path": "/api/health",
    "interval": 30,
    "timeout": 10
  }
}